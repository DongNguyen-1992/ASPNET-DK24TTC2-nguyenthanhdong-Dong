<!--================Tin Tức Mới Nhất=================-->
<section class="latest_news_area p_100" style="background-color:#f9f9f9">
	<div class="container">
		<div class="main_title">
			<h2>Tin Tức Mới Nhất</h2>
			<h5>Cập nhật những thông tin mới nhất về sản phẩm và khuyến mãi</h5>
		</div>
		<div class="row latest_news_inner">
			@if (ViewBag.LatestNews != null && ViewBag.LatestNews.Count > 0)
			{
				foreach (var news in ViewBag.LatestNews)
				{
					<div class="col-lg-4 col-md-6">
						<div class="l_news_item" style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.1); margin-bottom: 20px;">
							<div class="l_news_img">
								@if (!string.IsNullOrEmpty(news.Picture))
								{
									<img class="img-fluid" style="width: 100%; height: 250px; object-fit: cover;" src="~/img/Item/@news.Picture" alt="@news.Title">
								}
								else
								{
									<img class="img-fluid" style="width: 100%; height: 250px; object-fit: cover;" src="~/img/Item/default-blog.jpg" alt="No Image">
								}
							</div>
							<div class="l_news_text" style="padding: 20px;">
								@if (news.DateImport != null)
								{
									<a href="#"><h5 style="color: #888; font-size: 14px;"></h5></a>
								}
								<a href="@Url.Action("Details", "Blogs", new { id = news.ID })">
									<h4 style="color: #333; font-size: 18px; font-weight: 600; margin: 10px 0;">@news.Title</h4>
								</a>
								<p style="color: #666; line-height: 1.6;">
									@if (!string.IsNullOrEmpty(news.ShortTitle))
									{
										if (news.ShortTitle.Length > 100)
										{
											@(news.ShortTitle.Substring(0, 100) + "...")
										}
										else
										{
											@news.ShortTitle
										}
									}
								</p>
								<a href="@Url.Action("Details", "Blogs", new { id = news.ID })" style="color: #667eea; font-weight: 500; text-decoration: none;">
									Đọc thêm <i class="fas fa-arrow-right"></i>
								</a>
							</div>
						</div>
					</div>
				}
			}
			else
			{
				<div class="col-12 text-center" style="padding: 40px;">
					<i class="fas fa-inbox" style="font-size: 3rem; color: #ddd;"></i>
					<p style="color: #999; margin-top: 15px;">Chưa có tin tức nào</p>
				</div>
			}
		</div>
		<div class="text-center" style="margin-top: 20px;">
			<a href="@Url.Action("Index", "Home")" class="btn btn-primary" style="padding: 12px 30px; border-radius: 25px;">
				Xem tất cả tin tức <i class="fas fa-arrow-right"></i>
			</a>
		</div>
	</div>
</section>
<!--================End Tin Tức Mới Nhất=================-->
