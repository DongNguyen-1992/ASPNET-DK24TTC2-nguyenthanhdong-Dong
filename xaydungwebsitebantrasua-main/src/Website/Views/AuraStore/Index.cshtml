
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

@model IEnumerable<ProTechTiveGear.Models.Item>





<section class="welcome_bakery_area cake_feature_main p_100">
	<div class="container">
		<div class="main_title">
			<h2>Trà sữa </h2>

		</div>
	
		<div class="cake_feature_row row">
			@foreach (var item in Model)
			{
			
				<div class="col-lg-3 col-md-4 col-6">

					<div class="cake_feature_item">
						<a href="@Url.Action("Detail","AuraStore",new { id=item.ID})">
							<div class="cake_img">

								<img class="resize-image" src="~/img/Item/@item.Picture" alt="@item.Name">

							</div>
						</a>
						<div class="cake_text" style="background-color: #F4A460">
							<h4>@item.SellPrice</h4>
							<h3>@item.Name</h3>
							@if (item.Quantity == 0)
							{
								<p style="color:red">Out of Stock</p>
							}
							@if (item.Quantity == 0) {<a class="pest_btn disabled" >Thêm vào giỏ</a> }
							else { <a class="pest_btn" href="@Url.Action("AddtoCart","Cart",new {@id=item.ID,@strURL=Request.Url.ToString() })" style="background-color:brown">Thêm vào giỏ</a>}


							
						</div>
					</div>

				</div>

			}

		</div>

	</div>
</section>
<section class="new_arivals_area p_100" style="background-color:#f6f6f6">
	<div class="container">
		<div class="single_pest_title">
			<h2>Trà sữa mới</h2>
		</div>

		
		<div class="row arivals_inner">
			<div class="col-lg-6 col-sm-7">
				<div class="arivals_chocolate">
					<div class="arivals_pic">
						<img class="img-fluid resize-new" src="~/img/Item/Tra-Sua-Truyen-Thong.png" alt="Trà sữa khoai môn">
						
					</div>
				
					<div class="arivals_text">
                        <h4>Trà sữa<span> Khoai môn </span></h4>
                        <a href="#">Kem trứng</a>
					</div>
				</div>
			</div>
			@Html.Action("Newdproducts", "AuraStore")
		</div>
	</div>
</section>

